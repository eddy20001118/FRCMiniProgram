<view class='container'>
    <van-tabs style="width:750rpx;" color="#3f51b5" animated swipeable active="{{ active }}" bind:change="onChange">
        <van-tab title="Summary">
            <view class='container'>
                <event-index eventIndex="{{eventIndex}}" />
                <title-list title="Top Team">
                    <title-list-content wx:for="{{teamlist}}" wx:key="{{index}}" index="{{index}}" teamNumber="{{item.teamNumber}}" />
                </title-list>
            </view>
        </van-tab>
        <van-tab title="Teams">
            <view class='container'>
                <view wx:for="{{teamlist}}" wx:key="{{index}}">
                    <view data-id="{{index}}" bindtap='onEventCardClick'>
                        <team-card teamInfo="{{item}}" />
                    </view>
                </view>
            </view>
        </van-tab>
        <van-tab title="Rankings">
            Empty
        </van-tab>
        <van-tab title="Matches">
            <view class='container'>
                <van-collapse value="{{ activeNames }}" bind:change="onCollapseChange">
                    <van-collapse-item title="Qualification Matches" name="Qual">
                        <match-card></match-card>
                        <match-card></match-card>
                        <match-card></match-card>
                    </van-collapse-item>
                    <van-collapse-item title="Quarterfinal Matches" name="Quarter">
                        <match-card></match-card>
                    </van-collapse-item>
                    <van-collapse-item title="Semifinal Matches" name="Semi">
                        <match-card></match-card>
                    </van-collapse-item>
                    <van-collapse-item title="Finals Matches" name="Final">
                        <match-card></match-card>
                    </van-collapse-item>
                </van-collapse>
            </view>
        </van-tab>
        <van-tab title="Alliances">
            <alliance-card></alliance-card>
            <alliance-card></alliance-card>
            <alliance-card></alliance-card>
        </van-tab>
        <van-tab title="Awards">
            <view class='container'>
                <awards-card></awards-card>
            </view>
        </van-tab>
    </van-tabs>
</view>