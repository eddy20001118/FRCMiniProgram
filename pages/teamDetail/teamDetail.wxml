<view class="container">
    <van-tabs style="width:750rpx;" color="#3f51b5" animated active="{{ active }}" bind:change="onChange">
        <van-tab title="Info">
            <view class='container'>
                <team-index teamIndex="{{teamIndex}}" />
            </view>
        </van-tab>
        <van-tab title="Event">
            <view bindtap='onEventCardClick'>
                <pin-list>
                    <event-card eventInfo="{{eventInfo}}" />
                </pin-list>
            </view>
        </van-tab>
    </van-tabs>
</view>