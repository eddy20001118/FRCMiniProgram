<!--index.wxml-->
<view class="container">
    <view bindtap='onTeamCardClick'>
        <team-card teamInfo="{{teamInfo}}" noBottomPadding="{{true}}">
            <text class='text'>当前比赛:</text>
            <match-card></match-card>
        </team-card>
    </view>
    <view bindtap='onEventCardClick'>
        <pin-event-card eventInfo="{{eventInfo}}" steps="{{steps}}
            active=" {{active}} "/>
    </view>
</view>