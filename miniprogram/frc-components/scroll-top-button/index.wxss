.img {
    width: 20px;
    height: 20px;
}

.circle {
    width: 50px;
    height: 50px;
    background-color: #3f51b5;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 3px 5px rgba(26, 26, 26, 0.1);
    box-sizing: border-box;
    position: fixed;
    bottom: 15px;
    right: 15px;
}

.onClick {
    width: 50px;
    height: 50px;
    background-color: #354497;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 3px 5px rgba(26, 26, 26, 0.1);
    box-sizing: border-box;
    position: fixed;
    bottom: 15px;
    right: 15px;
}
