.list-content {
    width: 750rpx;
    height: 46px;
    flex-direction: row;
    align-items: center;
    display: flex;
}

.title {
    margin-left : 25rpx;
    margin-right: 10rpx;
    font-size: 28rpx;
}

.hover {
    flex-direction: column;
    display: flex;
    padding: 0px 15px;
    background-color: #eeeeee;
}

.icon{
    height: 20px;
    width: 20px;
}

.icon-right{
    margin-right: 50rpx;
    margin-left: auto;
    height: 20px;
    width: 20px;
}

.link-text{
    margin-bottom: 15px;
    font-size: 9pt;
    color: #424242;
}

.none{
    height: 0px;
}

.main {
    flex-direction: column;
    padding: 0px 15px;
    display: flex;
}